name: repotools
version: 0.1
synopsis: Tools to get metadata from repositories on Github
obuild-ver: 1

library repotools
  Modules: Changelog, Github_repo
  BuildDepends: uri (>= 1.3.2), cohttp.lwt, core, threads, lwt.syntax
  pp: camlp4o
  path: repotools

executable opam-changelog
  main: opam_changelog.ml
  src-dir: bin
  pp: camlp4o
  BuildDepends: repotools, lwt.syntax, lwt.unix, cmdliner
